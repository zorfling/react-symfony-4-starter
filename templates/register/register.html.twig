{% extends 'base.html.twig' %}

{% block title %}Register Panel{% endblock %}

{% block header %}
    <div class="container">
        <div class="row registerTitle">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <h1>Register Panel</h1>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>

    <br />
    <br />
{% endblock header %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                {{ form_start(registerForm) }}
                {{ form_widget(registerForm) }}

                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <input type="submit" value="Register" class="btn btn-success">
                    </div>
                </div>

                {{ form_end(registerForm) }}
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>

{% endblock %}

